@model LojaVirtual.FrontWeb.Models.ProdutoViewModel

@*CreateProduto.cshtml*@

<h2 class="text-center mb-4 text-light">Criar Novo Produto</h2>

<form asp-action="CreateProduto" class="mx-auto p-4 rounded" style="max-width: 600px; background-color: #1e1e1e; color: #fff;">
    <div class="form-horizontal">
        <hr class="border-secondary" />
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <!-- Nome do Produto -->
        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label fw-bold">Nome</label>
            <input asp-for="Name" class="form-control bg-dark text-light border-secondary" placeholder="Digite o nome do produto" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Descrição -->
        <div class="form-group mb-3">
            <label asp-for="Description" class="form-label fw-bold">Descrição</label>
            <input asp-for="Description" class="form-control bg-dark text-light border-secondary" placeholder="Digite a descrição" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- URL da Imagem -->
        <div class="form-group mb-3">
            <label asp-for="ImageURL" class="form-label fw-bold">URL da Imagem</label>
            <input asp-for="ImageURL" class="form-control bg-dark text-light border-secondary" placeholder="Informe a URL da imagem" />
            <span asp-validation-for="ImageURL" class="text-danger"></span>
        </div>

        <!-- Preço -->
        <div class="form-group mb-3">
            <label asp-for="Price" class="form-label fw-bold">Preço</label>
            <input asp-for="Price" class="form-control bg-dark text-light border-secondary" placeholder="Informe o preço" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- Estoque -->
        <div class="form-group mb-3">
            <label asp-for="Stock" class="form-label fw-bold">Estoque</label>
            <input asp-for="Stock" class="form-control bg-dark text-light border-secondary" placeholder="Quantidade em estoque" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>

        <!-- Categoria -->
        <div class="form-group mb-3">
            <label asp-for="CategoriaId" class="form-label fw-bold">Categoria</label>
            <select asp-for="CategoriaId" class="form-control bg-dark text-light border-secondary" asp-items="@ViewBag.CategoriaId"></select>
        </div>

        <!-- Botões -->
        <div class="form-group text-center">
            <input type="submit" value="Criar" class="btn btn-success w-50 mb-2" />
            <a asp-action="Index" class="btn btn-outline-light w-50">Voltar</a>
        </div>
    </div>
</form>
